<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_activity_buttons_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_size</item>
        <item name="android:layout_marginRight">@dimen/margin_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_size</item>
        <item name="android:backgroundTint">@color/button_bkg_color</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/button_text_color</item>

    </style>

    <style name="settings_items_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/unit_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_size</item>
        <item name="android:paddingEnd">@dimen/padding_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="header_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:layout_marginStart">@dimen/margin_size</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="parent_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="main_linear_layout_style" parent="parent_linear_layout_style">
        <item name="android:background">@color/bkg_color</item>
    </style>

    <style name="edit_text_style">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>

    </style>


</resources>