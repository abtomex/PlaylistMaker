<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="@dimen/header_height"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:backgroundTint="@color/button_bkg_color"
            android:padding="0dp"
            android:src="@drawable/back"
            android:contentDescription="@string/back"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ysdisplayfont"
            android:text="@string/settings"
            android:textColor="@color/dark_text_color"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_height"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_left_right_size"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dark_theme"
                android:fontFamily="@font/ysdisplayfont"
                android:textColor="@color/dark_text_color"
                android:textSize="@dimen/unit_text_size"
                android:textFontWeight="400"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_height"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_left_right_size"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/share_app"
                android:fontFamily="@font/ysdisplayfont"
                android:textColor="@color/dark_text_color"
                android:textSize="@dimen/unit_text_size"
                android:textFontWeight="400"
                />

            <ImageButton
                android:layout_width="@dimen/unit_height"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:backgroundTint="@color/button_bkg_color"
                android:padding="0dp"
                android:src="@drawable/share"
                android:contentDescription="@string/share_app"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_height"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_left_right_size"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/support"
                android:fontFamily="@font/ysdisplayfont"
                android:textColor="@color/dark_text_color"
                android:textSize="@dimen/unit_text_size"
                android:textFontWeight="400"
                />

            <ImageButton
                android:layout_width="@dimen/unit_height"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:backgroundTint="@color/button_bkg_color"
                android:padding="0dp"
                android:src="@drawable/support"
                android:contentDescription="@string/support"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_height"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_left_right_size"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/agreement"
                android:fontFamily="@font/ysdisplayfont"
                android:textColor="@color/dark_text_color"
                android:textSize="@dimen/unit_text_size"
                android:textFontWeight="400"
                />

            <ImageButton
                android:layout_width="@dimen/unit_height"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:backgroundTint="@color/button_bkg_color"
                android:padding="0dp"
                android:src="@drawable/next"
                android:contentDescription="@string/agreement"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>