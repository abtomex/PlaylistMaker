<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg_color"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginStart="@dimen/margin_size"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ysdisplayfont"
            android:text="@string/app_name"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </com.google.android.material.appbar.MaterialToolbar>

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_size"
        android:layout_marginRight="@dimen/margin_size"
        android:layout_marginBottom="@dimen/margin_size"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/button_bkg_color"
        android:fontFamily="@font/ysdisplayfont"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:cornerRadius="@dimen/radius"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconTint="@color/button_text_color" />

    <Button
        android:id="@+id/button_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_size"
        android:layout_marginRight="@dimen/margin_size"
        android:layout_marginBottom="@dimen/margin_size"
        android:backgroundTint="@color/button_bkg_color"
        android:fontFamily="@font/ysdisplayfont"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:cornerRadius="@dimen/radius"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconTint="@color/button_text_color" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_size"
        android:layout_marginRight="@dimen/margin_size"
        android:layout_marginBottom="@dimen/margin_size"
        android:layout_weight="1"
        android:backgroundTint="@color/button_bkg_color"
        android:fontFamily="@font/ysdisplayfont"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:cornerRadius="@dimen/radius"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconTint="@color/button_text_color" />


</LinearLayout>